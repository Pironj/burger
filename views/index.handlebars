<div class="row">
  <div class="container" id="bannerPhoto">
    <h1><strong>BEEFSQUATCH BURGERS</strong></h1>
    <img src="/assets/img/Beefsquatch.jpg" alt="burger banner">
  </div>
</div>
<div class="row">
  <div class="col" id="unsquatched">
    <h2>Burger to be Squatched</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col" id="squatched">
    <h2>Squatched Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="container" id="form">
    <form class="create-form">
      <div class="form-group">
        <label for="burgerName">Burger Name:</label>
        <input type="text" class="form-control" id="burgerName" name="burger_name" placeholder="Example: If Looks Could Kale Burger">
        <button type="submit">Add Burger</button>
      </div>
    </form>
  </div>
</div>
<script>
  $(function() {
    $(".change-devoured").on("click", function(event) {
      var id = $(this).data("id");
      var newDevoured = $(this).data("newdevoured");

      var newDevouredState = {
        devoured: newDevoured
      };

      //send PUT req to database.
      $.ajax("/api/burgers/" + id, {
        type: "PUT",
        data: newDevouredState
      }).then(
        function() {
          console.log("change devoured to", newDevoured);
          location.reload();
        }
      );
    });

    $(".create-form").on("submit", function(event) {
      // prevent page reloading
      event.preventDefault();

      var newBurger = {
        burger_name: $("#burgerName").val().trim(),
        devoured: 0
      };

      // send POST req.
      $.ajax("/api/burgers", {
        type: "POST",
        data: newBurger
      }).then(
        function() {
          console.log("made a new burger");
          location.reload();
        }
      );
    });
  });
</script>